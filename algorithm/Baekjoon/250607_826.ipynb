    "T = int(input())\n",
    "\n",
    "for _ in range(T):\n",
    "    L, R, S = map(int, input().split())\n",
    "    L_Check, R_Check = S - L, R - S\n",
    "    if L_Check < R_Check:\n",
    "        print(L_Check * 2 + 1)\n",
    "    else:\n",
    "        print(R_Check * 2)"
