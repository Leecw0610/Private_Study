    "N = int(input())\n",
    "result = 0\n",
    "\n",
    "for _ in range(N):\n",
    "    Skateboard = list(map(int, input().split()))\n",
    "    Run = Skateboard[:2]\n",
    "    Trick = Skateboard[2:]\n",
    "\n",
    "    Run.sort(reverse=True)\n",
    "    Trick.sort(reverse=True)\n",
    "\n",
    "    result = max(result, Run[0] + sum(Trick[:2]))\n",
    "\n",
    "print(result)"
