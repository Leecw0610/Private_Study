    "n = int(input())\n",
    "l = []\n",
    "\n",
    "for i in range(n):\n",
    "    a, b = map(int, input().split())\n",
    "    l.append(a-b)\n",
    "\n",
    "l.sort()\n",
    "\n",
    "if n%2 == 1:\n",
    "    print(1)\n",
    "else:\n",
    "    print(abs(l[n//2] - l[n//2-1]) + 1)"
