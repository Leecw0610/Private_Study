    "N, M, L = map(int, input().split())\n",
    "li = [0] * N\n",
    "cnt = i = 0\n",
    "\n",
    "while li[i] < M - 1:\n",
    "    li[i] += 1\n",
    "    cnt += 1\n",
    "    i = (i + L) % N if li[i] % 2 == 1 else (i - L) % N\n",
    "\n",
    "print(cnt)"
   ]
