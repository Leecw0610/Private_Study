    "max_value = 0\n",
    "\n",
    "for _ in range(int(input())) :\n",
    "    a, d, g = map(int, input().split())\n",
    "    if a == d + g :\n",
    "        value = a * (d + g) * 2\n",
    "    else :\n",
    "        value = a * (d + g)\n",
    "    max_value = max(value, max_value)\n",
    "print(max_value)"
